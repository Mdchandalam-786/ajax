    <button>click me</button>
    <div id="div"></div>
    <pre>
        <h1>get method</h1>
         $("button").click(function(){
                $.get("fetch.txt", function (data, status){
                    document.write("data:",data,"\nStatus:",status);
                });
            });

            <h1>post method</h1>
              $("button").click(function (){
                $.post("fetch.txt",
                    {
                        name: "samay raina",
                        live: "jail road"
                    },
                function(data,status){
                    document.write("data:",data,"\nStatus:",status);
                });
            });

    </pre>
